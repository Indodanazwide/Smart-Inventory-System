<%- include('partials/header') %>

<h1>Edit Inventory Item</h1>
<form action="/inventory/edit/<%= item.item_id %>" method="POST">
    <label for="item_name">Item Name:</label>
    <input type="text" id="item_name" name="item_name" value="<%= item.item_name %>" required>

    <label for="item_location">Location:</label>
    <input type="text" id="item_location" name="item_location" value="<%= item.location %>" required>

    <label for="category_id">Category:</label>
    <select id="category_id" name="category_id">
        <% categories.forEach(category => { %>
            <option value="<%= category.category_id %>" <%= category.category_id === item.category_id ? 'selected' : '' %>><%= category.category_name %></option>
        <% }) %>
    </select>

    <button type="submit">Update Item</button>
</form>

<%- include('partials/footer') %>
